{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "outDir": "./dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "test",
        "**/*spec.ts"
    ]
}